<div class="list-banner" style="background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url('<%=cl_image_path @list.photo.key%>')">
  <h1><%= @list.name %></h1>
</div>
<div class="cards">
  <% @list.movies.each do |movie| %> <!--Add movie with its info to a card-->
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <div class="movie-card" style="background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url('<%=movie.poster_url%>')">
      <div class="title">
        <h2><%= movie.title %></h2>
      </div>
      <div class="content">
        <p><%= movie.overview %></p>
      </div>
      <div class="bottom">
        <p>Rating: <%= movie.rating %></p>
        <p><%= link_to "Delete", bookmark_path(bookmark), class: "btn btn-dark", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this movie?" } %></p>
      </div>
    </div>
  <% end %>
</div>

<%= render 'shared/form_bookmark' %>
